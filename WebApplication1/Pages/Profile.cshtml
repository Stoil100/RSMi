@page
@model ProfileModel
@{
    ViewData["Title"] = "Profile";
    Layout = "_Layout";
}

<div class="page">
    <div class="row justify-content-center h-100 w-100 align-items-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h2>Your Profile</h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h3>Welcome, @Model.Username!</h3>
                    </div>
                    @if (Model.IsAdmin)
                    {
                        <div class="mb-4">
                            <h3>All Users</h3>
                            <ul class="list-group">
                                @foreach (var user in Model.Users)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span>
                                            @user.Username - @user.Email
                                        </span>
                                        <form method="post" asp-page-handler="Delete" asp-route-userId="@user.UserId" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                    <div class="text-center">
                        <form method="post" asp-page-handler="Logout">
                            <button type="submit" class="btn btn-danger btn-lg">Logout</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .page {
        background-image: url('/images/profile.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh;
        width: 100%;
        max-width: 100vw;
        margin: 0;
    }
</style>
